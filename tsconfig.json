{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "node16",
    "target": "esnext",
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "types": ["bun-types"]
  },
  "exclude": ["node_modules", "dist"]
}
